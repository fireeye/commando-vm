{
  "variables": {
      "iso_url": "https://software-download.microsoft.com/download/sg/17763.107.101029-1455.rs5_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
      "iso_checksum": "sha1:164F022A22D2305E6FBD82F6E35D530B6BBADCA8",
      "memory": "4096",
      "disk_size":"71680",
      "cpus":"2",
      "profile_file_name":"lite.json"
  },
  "builders": [
    {
      "communicator": "winrm",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "./floppy/Autounattend.xml",
        "./floppy/setup.ps1"
      ],
      "guest_os_type": "Windows10_64",
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "keep_registered": true,
      "memory": "{{ user `memory` }}",
      "shutdown_command": "shutdown /s /t 0",
      "shutdown_timeout": "30m",
      "type": "virtualbox-iso",
      "vm_name": "Windows_10_1809_x64_commando",
      "winrm_password": "vagrant",
      "winrm_username": "vagrant"
    }
  ],
  "provisioners": [
    {
      "script": "./scripts/disable_defender_script.cmd",
      "pause_before": "5m",
      "type": "windows-shell",
      "valid_exit_codes": [0,1]
    },
    {
      "type": "windows-restart",
      "pause_before": "5m",
      "restart_timeout": "10m"
    },
    {
      "filters": [
        "exclude:$_.Title -like '*Preview*'",
        "include:$true"
      ],
      "pause_before": "10m",
      "search_criteria": "IsInstalled=0",
      "type": "windows-update",
      "update_limit": "20"
    },
    {
      "script": "./scripts/disable_defender_script.cmd",
      "pause_before": "5m",
      "type": "windows-shell",
      "valid_exit_codes": [0,1]
    },
    {
      "destination": "C:/Users/vagrant/Downloads/install.ps1",
      "source": "../../install.ps1",
      "type": "file"
    },
    {
      "script": "./scripts/disable_defender_script.cmd",
      "pause_before": "5m",
      "type": "windows-shell",
      "valid_exit_codes": [0,1]
    },
    {
      "destination": "C:/Users/vagrant/Downloads/{{ user `profile_file_name` }}",
      "source": "../../Profiles/{{ user `profile_file_name` }}",
      "type": "file"
    },
    {
      "inline": [
        "Unblock-File C:/Users/vagrant/Downloads/install.ps1",
        "C:/Users/vagrant/Downloads/install.ps1 -profile_file C:/Users/vagrant/Downloads/{{ user `profile_file_name` }} -password vagrant -snapshot_check $false -nochecks $true"
      ],
      "pause_before": "30s",
      "type": "powershell"
    },
    {
      "inline": [
        "dir c:\\"
      ],
      "max_retries": 10,
      "pause_before": "60m",
      "type": "windows-shell"
    }
  ]
}